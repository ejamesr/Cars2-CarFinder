<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/ejr-custom.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Find A Car!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2015 - <a href="https://ejamesr.azurewebsites.net/" target="_blank">Eric J. Ruff</a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/NgApps/app.js"></script>
    <script src="~/NgApps/Controllers/NgCarFinderController.js"></script>
    <script src="~/NgApps/Services/NgCarFinderFactory.js"></script>
    <script>
    $(document).ready(function () {
        $('div.heading').addClass('col-md-3 col-sm-4 col-xs-4');
        $('div.selection').addClass('col-md-9 col-sm-8 col-xs-8');
        $('.main-grp').addClass('col-md-3 col-sm-4 col-xs-10');
        $('.car-grp').addClass('col-md-9 col-sm-8 col-xs-10');
        });
    </script>

</body>
</html>
